                        and $object <fedora-model:createdDate> $created
                        and $object <fedora-model:state> <info:fedora/fedora-system:def/model#Active>
                        and ($object <fedora-rels-ext:isMemberOfCollection> <info:fedora/' . $this->pid . '>
